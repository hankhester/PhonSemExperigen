<script>
	var continueButton = document.getElementById("1button0");
	continueButton.disabled = true;
	delayButtonEnabled(continueButton, 5);
	
	function delayButtonEnabled(button, seconds) {
		setTimeout(function() { button.disabled = false; }, seconds * 800);
	}
</script>