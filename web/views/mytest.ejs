<%
	sound_sg="resources/sounds/" + file_sg;
	sound_pl1="resources/sounds/" + file_pref;
	sound_pl2="resources/sounds/" + file_suff;

	ek_answer = item+"ek";
	ro_answer = "ro"+item;

	function playSound(soundFile) {
		var audio  = new Audio();
		var audioSource = document.createElement("source");
		audioSource.src = soundFile;
		audio.appendChild(audioSource);
		audio.play();
	}

	function playAllSounds() {
		setTimeout(function() { playSound(sound_sg); }, 1000);
		setTimeout(function() { playSound(sound_pl2); }, 2700);
		setTimeout(function() { playSound(sound_pl1); }, 3700);
	}
%>

<div style="text-align: center; line-height:130%;">
	<div class="items-group">
		<div class="item plural test">
			<span>?</span>
			<div class="image">
				<%= makePicture({src: frame.file_sg, width: 170}) %>
				<%= makePicture({src: frame.file_sg, width: 170}) %>
			</div>
		</div>
		<div class="item singular test">
			<span><%= item %></span>
			<div class="image">
				<%= makePicture({src: frame.file_sg, width: 170}) %>
			</div>
		</div>
	</div>

</div>

